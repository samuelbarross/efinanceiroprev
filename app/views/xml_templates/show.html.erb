<%- model_class = XmlTemplate -%>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <p id="notice"><%= notice %></p>
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2 control-label">
                             <%= model_class.human_attribute_name(:evento) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @xml_template.evento %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                                    <div class="form-group">
                        <div class="col-md-2 control-label">
                             <%= model_class.human_attribute_name(:descricao) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @xml_template.descricao %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-md-2 control-label">
                             <%= model_class.human_attribute_name(:user) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @xml_template.user.email %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                                <div class="form-group">
                    <div class="col-sm-4">
                        <%= link_to edit_xml_template_path(@xml_template), class: 'btn btn-primary' do %>
                        Editar
                        <% end %>
                        <%= link_to 'Voltar', xml_templates_path, :class => 'btn btn-white' %>
                        <%= link_to 'Novo', new_xml_template_path, :class => 'btn btn-warning' %>

                    </div>
                </div>

                </form>

            </div>
        </div>
    </div>
</div>
