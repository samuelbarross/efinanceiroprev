<%- model_class = Movimento -%>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <p id="notice"><%= notice %></p>
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2 control-label">
                             <%= model_class.human_attribute_name(:arquivo_origem) %>:
                        </div>
                        <div class="col-md-10">
                            <textarea class="form-control">
                                <%= @movimento.arquivo_origem %>
                            </textarea>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                                    <div class="form-group">
                        <div class="col-md-2 control-label">
                             <%= model_class.human_attribute_name(:data_arquivo_retorno) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @movimento.data_arquivo_retorno %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                                    <div class="form-group">
                        <div class="col-md-2 control-label">
                             <%= model_class.human_attribute_name(:xml_template) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @movimento.xml_template.evento %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                                    <div class="form-group">
                        <div class="col-md-2 control-label">
                             <%= model_class.human_attribute_name(:user) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @movimento.user.email %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                                <div class="form-group">
                    <div class="col-sm-4">
                        <%= link_to edit_movimento_path(@movimento), class: 'btn btn-primary' do %>
                        Editar
                        <% end %>
                        <%= link_to 'Voltar', movimentos_path, :class => 'btn btn-white' %>
                        <%= link_to 'Novo', new_movimento_path, :class => 'btn btn-warning' %>

                    </div>
                </div>

                </form>

            </div>
        </div>
    </div>
</div>
